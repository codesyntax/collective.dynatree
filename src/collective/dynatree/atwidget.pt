<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <metal:macro define-macro="view">
        <span metal:define-macro="string-field-view"
            tal:attributes="id string:parent-fieldname-$fieldName">
            <span metal:define-slot="inside" 
                  tal:replace="accessor">string</span>
        </span>
    </metal:macro>

	<metal:macro define-macro="edit"
	    tal:define="field field|view/field;
        widget nocall:widget|view/widget;
        portal nocall:portal|view/portal;
        mode nocall:mode|string:edit;
        errors nocall:errors|view/errors;
        immed_id view/brain/id|context/id;
        context_url view/context_url|context/absolute_url;
        baseid string:${fieldName}_${immed_id};"
    >
      <metal:use use-macro="field_macro | context/widgets/field/macros/edit" >    	
	      <div metal:fill-slot="widget_body"
		       tal:attributes="id string:$baseid" 
		       class="dynatree-atwidget">
		    <div class="collective-dynatree-tree">
		    </div>
		    <div style="display: none">
		        <span class="dynatree_fieldName"  tal:attributes="id fieldName" />
		        <input type="hidden" 
				       tal:attributes="id string:${baseid}_fieldName;value fieldName" />
				<input type="hidden" 
				       class="dynatree_ajax_vocabulary" 
					   tal:attributes="id string:${baseid}_dynatree_vocabulary;
		 			                   value string:${context/absolute_url}/@@at_widget_dynatree_json?fieldname=${fieldName}" />
		 		<input type="hidden" 
				       class="dynatree_parameters" 
					   tal:attributes="id string:${baseid}_dynatree_parameters;
		                               value string: ${widget/dynatreeParameters}" />
		    </div>
		  </div>
	  </metal:use>
	</metal:macro>
	

    <metal:macro metal:define-macro="search">
      <div metal:use-macro="context/widgets/string/macros/edit">
      </div>
    </metal:macro>
  </body>

</html>